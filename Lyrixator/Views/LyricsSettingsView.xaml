<UserControl x:Class="Lyrixator.Views.LyricsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:Lyrixator.ViewModels"
             d:DataContext="{d:DesignInstance vm:LyricsSettingsViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">

    <StackPanel>
        <Slider Height="60"
                IsMoveToPointEnabled="True"
                Style="{DynamicResource MaterialDesignDiscreteSlider}"
                ToolTip="Font Size"
                Value="{Binding FontSize}"
                Minimum="7"
                Maximum="200"/>

        <ListBox ItemsSource="{Binding TextAlignments}"
                 SelectedValue="{Binding TextAlignment}"
                 SelectedValuePath="Key"
                 Style="{StaticResource MaterialDesignToolToggleListBox}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <md:PackIcon Kind="{Binding Value}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>

</UserControl>
