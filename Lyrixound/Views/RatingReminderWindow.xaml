<Window x:Class="Lyrixound.Views.RatingReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Width="500"
        Height="210"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d">
    
    <Border Background="{DynamicResource MaterialDesignPaper}"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="2"
            CornerRadius="10"
            Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" 
                             ShadowDepth="5" 
                             Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       Margin="0,0,0,15">
                <md:PackIcon Kind="Star" 
                            Width="32" 
                            Height="32"
                            Foreground="{DynamicResource PrimaryHueMidBrush}"
                            VerticalAlignment="Center"/>
                <TextBlock Text="Enjoying Lyrixound?" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,10">
                <TextBlock Text="If you like the app, please rate us in the Microsoft Store!" 
                          TextWrapping="Wrap"
                          FontSize="14"
                          Margin="0,0,0,15"/>
                
                <TextBlock Text="Your feedback helps us improve and reach more users. It only takes a moment!"
                          TextWrapping="Wrap"
                          FontSize="12"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                          Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="0,10,0,0">
                <Button Content="MAYBE LATER"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Command="{Binding MaybeLaterCommand}"
                       Margin="0,0,10,0"
                       Padding="15,8"/>
                
                <Button Content="OK, DON'T SHOW AGAIN"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Command="{Binding DontShowAgainCommand}"
                       Margin="0,0,10,0"
                       Padding="15,8"/>
                
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                       Command="{Binding RateNowCommand}"
                       Padding="20,8">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="Star" 
                                    Width="18" 
                                    Height="18"
                                    Margin="0,0,5,0"/>
                        <TextBlock Text="RATE NOW"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

